<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Layout.RelativeActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/menu" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/current_song_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:src="@drawable/prev_song_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:src="@drawable/next_song_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_light"
        android:text="@string/title_song"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/singer"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singer"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/wave" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:paddingStart="50dp"
        android:src="@drawable/repeat"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/revind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave"
        android:layout_alignEnd="@id/play"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="55dp"
        android:src="@drawable/revind" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/play_button" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave"
        android:layout_alignStart="@id/play"
        android:layout_gravity="center"
        android:layout_marginStart="55dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/fast_forward" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:paddingEnd="50dp"
        android:src="@drawable/speaker"
        tools:ignore="RtlSymmetry" />
</RelativeLayout>